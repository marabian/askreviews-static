---
import { MessageSquare, BarChart2, Code } from "lucide-react";

const featuresList = [
  {
    title: "Product Expert",
    description:
      "Add an AI assistant to every product page that answers customer questions instantly.",
    icon: MessageSquare,
  },
  {
    title: "Analytics Dashboard",
    description:
      "Gain product insights from customer questions and make data-driven A/B testing decisions.",
    icon: BarChart2,
  },
  {
    title: "Website Integration",
    description:
      "Easy setup that automatically learns from your product descriptions and reviews.",
    icon: Code,
  },
];
---

<section class="overflow-hidden">
  <!-- <div class="px-8 pt-24 pb-16 mx-auto md:px-12 lg:px-32 max-w-7xl relative"> -->
  <div class="bg-accent-600">
    <div class="px-8 py-3 mx-auto md:px-12 lg:px-32 max-w-7xl">
      <p class="text-sm text-center font-medium text-white">
        ðŸŽ‰ New: AI-powered product insights now available! <a
          href="#pricing"
          class="inline-flex items-center underline hover:text-white/90"
          >Try it free <span aria-hidden="true">&rarr;</span></a
        >
      </p>
    </div>
  </div>
  <div class="px-8 pt-16 pb-16 mx-auto md:px-12 lg:px-32 max-w-7xl relative">
    <div class="max-w-3xl text-center mx-auto lg:text-balance">
      {
        /* <p class="text-base leading-normal font-bold uppercase text-accent-600">
        ECOMMERCE CUSTOMER INTELLIGENCE
      </p> */
      }
      <h2
        class="text-2xl leading-tight tracking-tight sm:text-3xl md:text-4xl lg:text-5xl xl:text-6xl mt-16 font-semibold text-base-900"
      >
        Add an <span
          class="bg-gradient-to-r from-blue-500 via-blue-600 to-blue-800 text-transparent bg-clip-text font-bold"
          >AI Expert Assistant</span
        > to Every <span
          class="bg-gradient-to-r from-blue-500 via-blue-600 to-blue-800 text-transparent bg-clip-text font-bold"
          >Product Page</span
        >
      </h2>
      <p
        class="text-lg sm:text-xl leading-relaxed mt-8 text-base-500 font-medium max-w-2xl mx-auto"
      >
        Help customers make confident buying decisions with an AI assistant that
        knows your products inside and out. Get valuable customer insights.
      </p>
      <div
        class="flex flex-wrap items-center gap-3 justify-center mx-auto mt-12"
      >
        <a
          href="#pricing"
          class="flex items-center justify-center transition-all duration-200 focus:ring-2 focus:outline-none text-white bg-accent-600 hover:bg-accent-700 focus:ring-accent-500/50 h-9 px-4 py-2 text-sm font-medium rounded-md"
        >
          Get Started Free
        </a>
        <a
          href="#demo"
          class="flex items-center justify-center transition-all duration-200 focus:ring-2 focus:outline-none text-base-500 bg-white hover:text-accent-500 ring-1 ring-base-200 focus:ring-accent-500 h-9 px-4 py-2 text-sm font-medium rounded-md"
        >
          See Demo
        </a>
      </div>
    </div>
    <dl
      class="lg:gap-x-8 lg:grid-cols-3 max-w-4xl mt-24 mx-auto sm:gap-x-6 sm:gap-y-12 sm:grid sm:grid-cols-2 sm:space-y-0 space-y-6 text-center text-sm items-start"
    >
      {
        featuresList.map(({ title, description, icon: Icon }) => (
          <div class="text-base-500 lg:text-balance flex flex-col items-center">
            <Icon className="w-6 h-6 mb-2 text-accent-600" />
            <strong class="text-base-700 mb-1">{title}</strong>
            {description}
          </div>
        ))
      }
    </dl>
    <div class="relative w-full mx-auto max-w-7xl items-center py-12 pb-12">
      <img
        alt="ProductGenie AI Assistant"
        class="relative w-full ring-4 ring-base-50 border border-base-200 lg:rounded-2xl object-cover rounded"
        src="/images/ask-questions.gif"
      />
    </div>
  </div>
</section>
